<Window x:Class="Focus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FocusPokusTruLaLa" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="117*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="17*"/>
        </Grid.ColumnDefinitions>

        <Menu VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="20,22,48,0">
            <MenuItem Header="comands">
                <MenuItem Header="set red colors" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <StackPanel Margin="20,20,20,-30" Grid.ColumnSpan="2" Grid.Row="1">
            <TextBox Height="30"/>
            <CheckBox Content="Check Me" Height="30" Margin="0,0,0,10"/>
            <RadioButton Content="Option 1" Height="30" Margin="0,0,0,10"/>
            <Button Content="Red" Height="30" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
